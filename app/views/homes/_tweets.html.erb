<% @tweets.each do |tweet| %>
  <div class="tweet-container">
    <div class="container-inline">
      <%= image_tag("avatar.png", size: "50x50", class: "rounded-circle") %>
      <b class="font-weight-bold">
        <% user = @users.select { |user| user.id == tweet.user_id } %>
        <%= current_user.email %>
      </b>

      <small>(<%= time_ago_in_words(tweet.created_at) %>)</small>
    </div>

    <div class="new-comment-container mt-2">
      <%= tweet.context %>

      <%= render 'homes/comments', current_tweet_id: tweet.id %>

      <td>
        <%= form_for @new_comment, local: true do |form| %>
          <p>
            <%= form.text_area :body, class: "form-control col-md-4", placeholder: "Comment" %>
          </p>

          <p>
            <%= hidden_field_tag(:tweet_id, tweet.id) %>
            <%= form.submit "Comment", class: 'btn btn-primary' %>
          </p>
        <% end %>

      </td>
    </div>
  </div>
<% end %>